{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "redcoral-pos",
  "version": "1.2.0",
  "identifier": "com.xzy.pos",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "redcoral-pos",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost data: blob:; font-src 'self' asset: http://asset.localhost data:; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src 'self' tauri: ws: asset: http://ipc.localhost http://localhost:9625 http://127.0.0.1:9625",
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://cloud.redcoral.app/api/update/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY5N0Y4MTc5QzM1NTE3NzkKUldSNUYxWERlWUYvK2NNUUphUFFhbWVLVXlwWUNpNmZVcVhSZmsvbGNSUW91OTZra2ZKS0ZWT1MK"
    }
  }
}
